<%= form_for [:admin, @item] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :status %>
  <%= f.select :status, ['Active','Retired'], :selected => 'Active' %>

<%= f.submit "Update" %>
<% end %>
